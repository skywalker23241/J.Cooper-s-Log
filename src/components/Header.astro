<script>
	// 极简移动菜单功能
	class SimpleMobileMenu {
		private menuBtn: HTMLButtonElement | null = null;
		private menu: HTMLDivElement | null = null;
		private menuLinks: NodeListOf<HTMLAnchorElement> | null = null;

		constructor() {
			this.init();
		}

		init() {
			this.menuBtn = document.getElementById('mobile-menu-btn') as HTMLButtonElement;
			this.menu = document.getElementById('mobile-menu') as HTMLDivElement;
			this.menuLinks = this.menu?.querySelectorAll('a') as NodeListOf<HTMLAnchorElement>;

			if (!this.menuBtn || !this.menu) {
				return;
			}

			this.bindEvents();
		}

		bindEvents() {
			// 切换菜单
			this.menuBtn?.addEventListener('click', (e: Event) => {
				e.preventDefault();
				this.toggleMenu();
			});

			// 点击链接关闭菜单
			this.menuLinks?.forEach((link: HTMLAnchorElement) => {
				link.addEventListener('click', () => {
					this.closeMenu();
				});
			});

			// 点击外部关闭菜单
			document.addEventListener('click', (e: Event) => {
				if (!this.menuBtn?.contains(e.target as Node) && 
					!this.menu?.contains(e.target as Node)) {
					this.closeMenu();
				}
			});

			// ESC 键关闭
			document.addEventListener('keydown', (e: KeyboardEvent) => {
				if (e.key === 'Escape') {
					this.closeMenu();
				}
			});
		}

		toggleMenu() {
			if (this.isOpen()) {
				this.closeMenu();
			} else {
				this.openMenu();
			}
		}

		openMenu() {
			this.menu?.classList.add('active');
		}

		closeMenu() {
			this.menu?.classList.remove('active');
		}

		isOpen(): boolean {
			return this.menu?.classList.contains('active') ?? false;
		}
	}

	// 初始化
	function initSimpleMobileMenu() {
		new SimpleMobileMenu();
	}

	// 多种初始化方式
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initSimpleMobileMenu);
	} else {
		initSimpleMobileMenu();
	}

	// Astro 页面加载事件
	document.addEventListener('astro:page-load', initSimpleMobileMenu);
</script>
