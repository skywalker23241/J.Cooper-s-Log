</header>
<style>
	/* Header Container */
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--header-bg);
		box-shadow: var(--header-shadow);
		border-bottom: 1px solid var(--border-color, rgba(0, 0, 0, 0.1));
	}

	/* 防止主题切换时的闪烁 */
	:global(html.theme-transitioning) header,
	:global(html.theme-transitioning) header * {
		transition: color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important,
					background-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important,
					border-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important;
	}

	/* 确保链接在主题切换时不会闪烁 */
	:global(html.theme-transitioning) .nav-links a,
	:global(html.theme-transitioning) .mobile-nav-links a {
		color: inherit !important;
		background-color: transparent !important;
	}

	/* 主题更新期间禁用所有过渡 */
	:global(html[style*="--updating-theme"]) *,
	:global(html[style*="--updating-theme"]) *:before,
	:global(html[style*="--updating-theme"]) *:after {
		transition: none !important;
		animation: none !important;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

			/* Mobile safe area and prevent clipping on right edge */
			.container { padding-right: max(1rem, env(safe-area-inset-right)); }


	/* Main Navigation */
	.nav-main {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		min-height: 4rem;
		gap: 1rem;
	}

			/* ensure right side has room for the toggle button on small screens */
			@media (max-width: 768px) {
				.nav-actions { padding-right: 0.25rem; }
			}


	/* Brand/Logo */
	.brand {
		grid-column: 1;
		justify-self: start;
	}

	.brand h1 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
	}

	.brand-link {
		color: var(--text-color, var(--black));
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.brand-link:hover {
		color: var(--accent);
	}

	/* Brand logo theming */
	.brand { display: flex; align-items: center; justify-content: center; }
	.brand-link { display: inline-flex; align-items: center; justify-content: center; height: 100%; }
	.brand-logo { display: inline; transition: opacity .2s ease; }
	.logo-dark { display: none; }
	:global(html[data-theme="dark"]) .logo-light { display: none !important; }
	:global(html[data-theme="dark"]) .logo-dark { display: inline-block !important; }
	/* Fallback for first paint when data-theme is not set yet */
	@media (prefers-color-scheme: dark) {
		:global(html:not([data-theme])) .logo-light { display: none !important; }
		:global(html:not([data-theme])) .logo-dark { display: inline-block !important; }
	}

	/* Mobile: center brand in header while keeping actions visible */
	@media (max-width: 768px) {
		.brand { position: absolute; left: 50%; transform: translateX(-50%); }
	}

	/* Navigation Links */
	.nav-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		grid-column: 2;
		position: relative;
	}

	/* Navigation Actions */
	.nav-actions {
		display: flex;
		align-items: center;
		justify-content: flex-end;
		gap: 1rem;
		grid-column: 3;
	}

	/* Social Links */
	.social-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.5rem;
		color: var(--text-color, var(--black));
		text-decoration: none;
		border-radius: 0.375rem;
		transition: all 0.2s ease;
	}

	.social-link:hover {
		color: var(--accent);
		background-color: var(--bg-accent, rgba(0, 0, 0, 0.05));
	}

	/* Mobile Menu */
	.mobile-menu-toggle {
		display: none;
		justify-content: center;
		align-items: center;
		width: 2.5rem;
		height: 2.5rem;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
		border-radius: 0.375rem;
		transition: background-color 0.3s ease, transform 0.2s ease;
		position: relative;
		overflow: hidden;
	}

	.mobile-menu-toggle:hover {
		background-color: var(--bg-accent, rgba(0, 0, 0, 0.05));
		transform: scale(1.05);
	}

	.mobile-menu-toggle:active {
		transform: scale(0.95);
	}

	/* 按钮点击动画 */
	.mobile-menu-toggle.clicking {
		animation: menuButtonClick 0.3s ease;
	}

	@keyframes menuButtonClick {
		0% { transform: scale(1); }
		50% { transform: scale(1.1) rotate(5deg); }
		100% { transform: scale(1); }
	}

	/* 汉堡图标容器 */
	.hamburger-icon,
	.close-icon {
		position: unset;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* 汉堡线条 */
	.hamburger {
		width: 1.25rem;
		height: 2px;
		background-color: var(--text-color);
		margin: 2px 0;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 1px;
		transform-origin: center;
	}

	/* 关闭图标 */
	.close-icon {
		opacity: 0;
		visibility: hidden;
		transform: rotate(180deg) scale(0.8);
	}

	.close-icon svg {
		color: var(--text-color);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	/* 菜单打开状态 */
	.mobile-menu-toggle.active .hamburger-icon {
		opacity: 0;
		visibility: hidden;
		transform: rotate(-180deg) scale(0.8);
	}

	.mobile-menu-toggle.active .close-icon {
		opacity: 1;
		visibility: visible;
		transform: rotate(0deg) scale(1);
	}

	/* 汉堡线条动画 */
	.mobile-menu-toggle.active .hamburger:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}

	.mobile-menu-toggle.active .hamburger:nth-child(2) {
		opacity: 0;
		transform: scale(0);
	}

	.mobile-menu-toggle.active .hamburger:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -6px);
	}

	/* Mobile Navigation */
	.nav-mobile {
		position: absolute;
		top: 100%;
		left: 0;
		right: 0;
		background: var(--header-bg);
		border-top: 1px solid var(--border-color, rgba(0, 0, 0, 0.1));
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
		transform: translateY(-20px) scale(0.95);
		opacity: 0;
		visibility: hidden;
		transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
		z-index: 50;
		max-height: 0;
		overflow: hidden;
		border-radius: 0 0 1rem 1rem;
	}

	.nav-mobile.active {
		transform: translateY(0) scale(1);
		opacity: 1;
		visibility: visible;
		max-height: 400px;
	}

	.mobile-nav-links {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		padding: 1rem;
		transform: translateY(-20px);
		transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1) 0.1s;
	}

	.nav-mobile.active .mobile-nav-links {
		transform: translateY(0);
	}

	/* 移动端链接样式 */
	.mobile-nav-links a {
		padding: 0.75rem 1rem;
		border-radius: 0.5rem;
		transition: all 0.3s ease;
		border-left: 3px solid transparent;
		opacity: 0;
		transform: translateX(-20px);
		animation: slideInLeft 0.4s ease forwards;
	}

	/* 链接逐个出现的动画 */
	.mobile-nav-links a:nth-child(1) { animation-delay: 0.1s; }
	.mobile-nav-links a:nth-child(2) { animation-delay: 0.15s; }
	.mobile-nav-links a:nth-child(3) { animation-delay: 0.2s; }
	.mobile-nav-links a:nth-child(4) { animation-delay: 0.25s; }

	@keyframes slideInLeft {
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.mobile-nav-links a:hover,
	.mobile-nav-links a.active {
		background-color: var(--bg-accent);
		border-left-color: var(--accent);
		transform: translateX(8px);
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}

	/* 菜单关闭时的动画 */
	.nav-mobile:not(.active) .mobile-nav-links a {
		animation: slideOutLeft 0.3s ease forwards;
	}

	@keyframes slideOutLeft {
		from {
			opacity: 1;
			transform: translateX(0);
		}
		to {
			opacity: 0;
			transform: translateX(-20px);
		}
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.nav-main {
			display: flex;
			justify-content: space-between;
		}


			/* Make sure the toggle icon doesn't get cut off */
			@supports (padding: max(0px)) {
				.mobile-menu-toggle { padding-right: max(0.5rem, env(safe-area-inset-right)); }
			}

		.nav-links {
			display: none;
		}

		.social-links {
			display: none;
		}

		.mobile-menu-toggle {
			display: flex;
		}
	}

	@media (max-width: 480px) {
		.container {
			padding: 0 0.75rem;
		}

		.nav-main {
			min-height: 3.5rem;
		}

		.brand h1 {
			font-size: 1.125rem;
		}
	}

	/* Accessibility */
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	/* Navigation link styles with higher specificity */
	.nav-links a,
	.mobile-nav-links a {
		padding: 1em 0.5em;
		color: var(--text-color) !important;
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: opacity 0.1s ease,
					color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
					border-bottom-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
					background-color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 0.375rem;
		background-color: transparent !important;
	}

	/* 主题过渡时的特殊处理 */
	:global(html.theme-transitioning) .nav-links a,
	:global(html.theme-transitioning) .mobile-nav-links a {
		transition: color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important,
					border-bottom-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important,
					background-color 0.5s cubic-bezier(0.4, 0, 0.2, 1) !important;
	}

	.nav-links a.active,
	.mobile-nav-links a.active {
		border-bottom-color: var(--accent);
		color: var(--accent) !important;
	}

	.nav-links a:hover,
	.mobile-nav-links a:hover {
		border-bottom-color: var(--accent);
		color: var(--accent) !important;
		background-color: var(--bg-accent, rgba(0, 0, 0, 0.05));
	}

	/* Brand link styles */
	.brand-link {
		transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
	}

	/* Mobile Backdrop */
	.mobile-backdrop {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.5);
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease;
		z-index: 40;
		backdrop-filter: blur(4px);
		pointer-events: none;
	}

	.nav-mobile.active ~ .mobile-backdrop {
		opacity: 1;
		visibility: visible;
		pointer-events: auto;
	}
</style>

<script>
	// Mobile menu toggle functionality
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
		const mobileNav = document.querySelector('.nav-mobile');
		const mobileBackdrop = document.querySelector('.mobile-backdrop');

		if (mobileMenuToggle && mobileNav && mobileBackdrop) {
			// 菜单切换函数
			function toggleMobileMenu() {
				if (!mobileNav || !mobileMenuToggle) return;

				// 添加点击动画
				mobileMenuToggle.classList.add('clicking');
				setTimeout(() => {
					mobileMenuToggle.classList.remove('clicking');
				}, 300);

				const isActive = mobileNav.classList.contains('active');

				if (isActive) {
					// 关闭菜单
					mobileNav.classList.remove('active');
					mobileMenuToggle.classList.remove('active');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
					mobileMenuToggle.setAttribute('aria-label', 'Open mobile menu');
				} else {
					// 打开菜单
					mobileNav.classList.add('active');
					mobileMenuToggle.classList.add('active');
					mobileMenuToggle.setAttribute('aria-expanded', 'true');
					mobileMenuToggle.setAttribute('aria-label', 'Close mobile menu');
				}
			}

			mobileMenuToggle.addEventListener('click', toggleMobileMenu);

			// 点击背景遮罩关闭菜单
			mobileBackdrop.addEventListener('click', toggleMobileMenu);

			// Close mobile menu when clicking outside
			document.addEventListener('click', (e) => {
				const target = e.target as Node;
				if (target && mobileMenuToggle && !mobileMenuToggle.contains(target) && !mobileNav.contains(target)) {
					if (mobileNav.classList.contains('active')) {
						mobileNav.classList.remove('active');
						mobileMenuToggle.classList.remove('active');
						mobileMenuToggle.setAttribute('aria-expanded', 'false');
						mobileMenuToggle.setAttribute('aria-label', 'Open mobile menu');
					}
				}
			});

			// Close mobile menu on window resize if it gets too wide
			window.addEventListener('resize', () => {
				if (window.innerWidth > 768) {
					mobileNav.classList.remove('active');
					mobileMenuToggle.classList.remove('active');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
					mobileMenuToggle.setAttribute('aria-label', 'Open mobile menu');
				}
			});

			// Close menu when clicking on a link
			const mobileLinks = mobileNav.querySelectorAll('a');
			mobileLinks.forEach(link => {
				link.addEventListener('click', () => {
					mobileNav.classList.remove('active');
					mobileMenuToggle.classList.remove('active');
					mobileMenuToggle.setAttribute('aria-expanded', 'false');
					mobileMenuToggle.setAttribute('aria-label', 'Open mobile menu');
				});
			});
		}
	});
</script>
